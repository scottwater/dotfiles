[user]
  name = Scott Watermasysk
	email = scottwater@gmail.com
[core]
  autocrlf = false
  legacyheaders = false
  pager = delta
  excludesfile = ~/.gitignore_global
[delta]
    features = discord
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
[merge]
    conflictStyle = zdiff3
[interactive]
    diffFilter = delta --color-only
[diff]
	tool = nvimdiff
[alias]
  co = checkout
  s = switch
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
	dump = cat-file -p
	fs = flow feature start
	ff = flow feature finish
	pd = push origin develop
	pm = push origin main
	md = merge develop
	cb = checkout -b
	ci = commit
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git l -30
	ra = !git r --all
	mff = merge --ff-only
	pullff = pull --ff-only
	l = log --graph --abbrev-commit --date=relative
	la = !git l --all
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	t = commit -am
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	get = !git pull origin $(git rev-parse --abbrev-ref HEAD)
	set = !git push origin $(git rev-parse --abbrev-ref HEAD)
	amend = !git commit --amend --no-edit
  rebase-pr = "!f() { TARGET=${2:-main}; git rebase --onto $TARGET $1; }; f"
	cr = !git add . && git rebase --continue

[format]
	pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[credential]
	helper = osxkeychain
[push]
	default = matching

[include]
  path = ~/.gitconfig_custom
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[include]
    path = ~/.config/delta/themes.gitconfig
[rebase]
	updateRefs = true
[advice]
	skippedCherryPicks = false
[init]
	defaultBranch = main
