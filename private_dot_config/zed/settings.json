// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "terminal": {
    "font_size": 20.0
  },
  "colorize_brackets": true,
  "sticky_scroll": {
    "enabled": true
  },
  "git": {
    "hunk_style": "staged_hollow"
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "git_panel": {
    "button": true,
    "collapse_untracked_diff": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "icon_theme": "Monospace Icon Theme - Light",
  "project_panel": {
    "sort_mode": "mixed",
    "default_width": 200.0,
    "starts_open": true,
    "git_status": true,
    "hide_hidden": false,
    "hide_root": true,
    "entry_spacing": "standard",
    "dock": "left",
    "folder_icons": false,
    "auto_fold_dirs": true,
    "auto_reveal_entries": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "ui_font_size": 18.0,
  "ui_font_family": "Hack Nerd Font Mono",
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 20,
  "theme": "Dracula Pro (Van Helsing)",
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp"]
    }
  },
  "lsp": {
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    }
  },
  "theme_overrides": {
