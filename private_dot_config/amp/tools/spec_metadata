#!/usr/bin/env bash
set -euo pipefail

# AMP Toolbox: spec_metadata
# Collects git and timestamp metadata for workflow documents

ACTION="${TOOLBOX_ACTION:-}"

if [[ "$ACTION" == "describe" ]]; then
  cat <<EOF
name: spec_metadata
description: Collect metadata for workflow documents including current date/time, git commit, branch, and repository name. Use this when creating workflow documents (plans, research, tickets) that need frontmatter metadata.
EOF
  exit 0
fi

if [[ "$ACTION" == "execute" ]]; then
  # Collect metadata
  DATETIME_TZ=$(date '+%Y-%m-%d %H:%M:%S %Z')
  FILENAME_TS=$(date '+%Y-%m-%d_%H-%M-%S')

  if command -v git >/dev/null 2>&1 && git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
    REPO_ROOT=$(git rev-parse --show-toplevel)
    REPO_NAME=$(basename "$REPO_ROOT")
    GIT_BRANCH=$(git branch --show-current 2>/dev/null || git rev-parse --abbrev-ref HEAD)
    GIT_COMMIT=$(git rev-parse HEAD)
  else
    REPO_ROOT=""
    REPO_NAME=""
    GIT_BRANCH=""
    GIT_COMMIT=""
  fi

  # Output metadata
  echo "Current Date/Time (TZ): $DATETIME_TZ"
  [ -n "$GIT_COMMIT" ] && echo "Current Git Commit Hash: $GIT_COMMIT"
  [ -n "$GIT_BRANCH" ] && echo "Current Branch Name: $GIT_BRANCH"
  [ -n "$REPO_NAME" ] && echo "Repository Name: $REPO_NAME"
  echo "Timestamp For Filename: $FILENAME_TS"
  exit 0
fi

echo "Unknown TOOLBOX_ACTION: $ACTION" >&2
exit 1
